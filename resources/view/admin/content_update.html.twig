{% extends "admin/master.html.twig" %}

{% block content %}
<h3>Update Content</h3>
<form class="form-horizontal" role="form" id="content" action="/admin/content/update" method="post">
    <input type="hidden" name="id" value="{{ contents.id }}">
    <div class="form-group">
        <label for="sel1">Menu:</label>
        <select name="menu_id" class="form-control" id="sel1">
            {% for menu in menus %}
                <option value="{{ menu.id }}"
                {% if menu.id == contents.menu_id %}
                    selected="true"
                {% endif %}
                >{{ menu.name }}</option>
            {% endfor %}
        </select>
    </div>
    <div class="form-group">
        <label for="usr">Title:</label>
        <input type="text" class="form-control" name="title" value="{{ contents.blog_title }}">
    </div>
    <div class="form-group">
        <label for="comment">Content:</label>
        <textarea class="form-control" rows="5" name="content" id="comment">{{ contents.blog_content }}</textarea>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-default">Submit</button>
    </div>
</form>

{% endblock %}